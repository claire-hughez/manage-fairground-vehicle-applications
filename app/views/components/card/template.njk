{%- from "govuk/components/tag/macro.njk" import govukTag -%}

<div class="app-card">


    <h2 class="govuk-heading-m">
        <a href="/applications/{{ params.id }}">
            {{ params.fullName }}
        </a>
    </h2>

        {% if params.status == "Approved" %}
            {{ govukTag({
                text: "Lover",
                classes: "govuk-tag--green govuk-!-margin-bottom-3"
            }) }}
        {% elseif params.status == "Rejected" %}

                {{ govukTag({
                text: "Bad blood",
                classes: "govuk-tag--red govuk-!-margin-bottom-3"
            }) }}

        {% elseif params.status == "Undecided" %}

                {{ govukTag({
                text: "Speak now",
                classes: "govuk-tag--purple govuk-!-margin-bottom-3"
            }) }}

        {% endif %}

    <p>
       <b>
            Application reference:
        </b> {{ params.id }}
    </p>

    <p>
       <b>
            Date submitted:
        </b> {{ params.submittedAt }}
    </p>
</div>